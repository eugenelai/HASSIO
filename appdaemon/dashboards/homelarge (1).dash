homelabel:
    widget_type: label
    text: Home
    widget_style: "font-size: 70%; text-align: left; background: #222; padding: 10px 0 0 10px;"


settings:
    widget_type: label
    text: settings


weather:
    widget_type: weather
    unit: "&deg;C"
    main_style: "color: white; font-size: 80%;"
    sub_style: "color: white; font-size: 0%;"
    unit_style: "color: white;"
    widget_style: "background: black; font-color: white;"
    title: Today
    title_style: "color: white;"


