title: Home
widget_dimensions: [58, 54]
widget_margins: [5, 5]
columns: 16
rows: 10

layout:
    - homelabel(3x1)
    - spacer(3x1), clock.clock(4x4), spacer(2x1), weather(4x4)
    -
    -
    -
    - spacer(9x1), spacer, sensor.living_room_temperature, spacer, sensor.bedroom_temperature
